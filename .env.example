# =============================================================================
# FRAMELORD ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env files with real API keys to version control
# =============================================================================

# =============================================================================
# LLM APIs (FrameScan, Little Lord, AI features)
# =============================================================================

# OpenAI API Key - Required for FrameScan analysis and AI features
# Get your key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=

# OpenAI Model (optional, defaults to gpt-4o-mini)
VITE_OPENAI_MODEL=gpt-4o-mini

# NanoBanana API Key - Optional, for image annotation features
# Users can also configure personal keys in Settings > Integrations
VITE_NANOBANANA_API_KEY=
VITE_NANOBANANA_API_URL=

# =============================================================================
# STRIPE BILLING (Required for production subscriptions)
# =============================================================================

# Stripe Public Key - Client-side (safe to expose)
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLIC_KEY=pk_test_xxx

# Stripe Secret Key - Server-side only (NEVER expose to client)
# Used in serverless functions (Vercel API routes)
STRIPE_SECRET_KEY=sk_test_xxx

# Stripe Webhook Secret - For validating webhook signatures
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxx

# =============================================================================
# DEPLOYMENT (Vercel)
# =============================================================================

# Base URL for the deployed app (used in callbacks)
# Example: https://framelord.vercel.app
VITE_APP_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================

# Set to 'development' or 'production'
NODE_ENV=development
